<menu xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Buttons shown in overflow in Actionbar -->
    <group 
        android:id="@+id/bgroup_overflow"    
        android:visible="false"
        android:orderInCategory="100" >
            
        <item
            android:id="@+id/button_settings"
            android:showAsAction="never"
            android:title="@string/button_settings" />
        
        <item
            android:id="@+id/button_exit"
            android:showAsAction="never"
            android:title="@string/button_exit" />
    
    </group>
    
    
    <!-- Buttons in Actionbar for Fragments, not shown when ActivityMain is created,
            only shown when the Fragment is created -->
    
    <!-- Fragment "Sessions" -->
    <!-- Buttons in Actionbar for Fragment "Sessions"-->
    <group 
        android:id="@+id/bgroup_sessions"
        android:visible="false" >
    
        <item
            android:id="@+id/button_add_session"
            android:icon="@drawable/ic_button_add"
            android:showAsAction="always"
            android:title="@string/button_add" />
        
        <item
	        android:id="@+id/button_search_sessions"
	        android:icon="@drawable/ic_button_search"
	        android:showAsAction="always"
	        android:title="@string/button_search" />
        
    </group>
    
    <!-- Fragment "Scripts" -->
    <!-- Buttons in Actionbar for Fragment "Scripts"-->
    <group 
        android:id="@+id/bgroup_scripts"
        android:visible="false" >
    
        <item
            android:id="@+id/button_download_script"
            android:icon="@drawable/ic_button_download"
            android:showAsAction="always"
            android:title="@string/button_download" />
        
        <item
            android:id="@+id/button_search_scripts"
            android:icon="@drawable/ic_button_search"
            android:showAsAction="always"
            android:title="@string/button_search" />
        
    </group>
    
    <!-- Fragment "Speakers" -->
    <!-- Buttons in Actionbar for Fragment "Speakers"-->
    <group 
        android:id="@+id/bgroup_speakers"
        android:visible="false" >
    
        <item
            android:id="@+id/button_add_speaker"
            android:icon="@drawable/ic_button_add"
            android:showAsAction="always"
            android:title="@string/button_add" />
        
        <item
            android:id="@+id/button_search_speakers"
            android:icon="@drawable/ic_button_search"
            android:showAsAction="always"
            android:title="@string/button_search" />
        
    </group>

</menu>

