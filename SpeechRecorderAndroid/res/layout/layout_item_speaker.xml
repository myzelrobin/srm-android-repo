<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:orientation="vertical" >
    
    <LinearLayout 
	    android:layout_width="480dp"
	    android:layout_height="160dp"
	    android:orientation="horizontal" >
	    <ImageView 
		    android:id="@+id/iconInItemSpeaker"
	        android:layout_width="160dp"
	        android:layout_height="160dp"
	        android:scaleType="fitXY"
	        android:src="@drawable/ic_speaker"  />
	    <LinearLayout 
	        android:background="#888888"
	        android:layout_width="280dp"
	        android:layout_height="120dp"
	        android:layout_margin="20dp"
	        android:gravity="left|center_vertical"
	        android:orientation="vertical" >
	        
	        <TextView 
	            android:id="@+id/nameInItemSpeaker"
	            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp" 
                android:text="@string/speaker1_name"/>
	        <TextView 
                android:id="@+id/sexInItemSpeaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" 
                android:text="@string/speaker1_sex"/>
	        <TextView 
                android:id="@+id/accentInItemSpeaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" 
                android:text="@string/speaker1_accent"/>
	        <TextView 
                android:id="@+id/birthdayInItemSpeaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" 
                android:text="@string/speaker1_birthday"/>
	        
	    </LinearLayout>
        
    </LinearLayout>
    

</LinearLayout>
